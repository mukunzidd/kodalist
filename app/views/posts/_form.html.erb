<%= simple_form_for @post, html: { class: 'form-horizontal' } do |f| %>
	<%= collection_select(:post, :category_id, Category.all, :id, :name) %>
	<br> <br>
	<%= f.input :title %>
	<%= f.input :body %>
	<%= f.submit :submit, class: "btn" %>
	<%= link_to 'Cancel', :back, class: "button" %>
	<br> <br>
<% end %>
