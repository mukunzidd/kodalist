<div class="container">
		<!-- Filters -->
		<div class="mt-2">
      <%= button_to 'New Post', new_post_path, method: :get %>
    </div>

	<!-- All Posts -->

	<% @posts.each do |post| %>
		<div class="card m-5">
		  <div class="card-block">
		    <h4 class="card-title"><%= link_to post.title, post %></h4>
		    <p class="card-text"><%= truncate post.body, length: 50 %></p>
		    <br>

		    <a href="<%= post_path(post) %>" class="btn btn-info">Read More</a>

		  </div>
		    <div class="card-footer text-muted">
			    Posted by @<%= post.user.username %>, <%= time_ago_in_words(post.created_at)%> ago.
			  </div>
		</div>
	<% end %>
</div>

