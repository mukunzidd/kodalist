<h1><%= @chat_room.title %></h1>

<div id="chat_messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.chat_messages %>
</div>

<%= form_for @chat_message, url: '#' do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>