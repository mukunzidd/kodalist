<div class="w3-row">
	<div class="w3-cell m8 w3-padding">
		<h1>Your conversations</h1>
		<p><em><%= link_to 'Look for people to chat...', users_path, class: "btn button" %></em></p>
		<!-- <div id="conversations"> -->
		<% @conversations.each do |conversation| %>
		  <div class="w3-card w3-padding w3-margin w3-border w3-round-xlarge" id="<%= conversation.id %>">
			  <h5><%= conversation.with(current_user).username %></h5> 
			  <br>
			  <em><%= conversation.personal_messages.last.body.truncate(50) if conversation.personal_messages.last %></em>
			  <br>
			  <%= link_to 'View conversation', conversation_path(conversation) %>
			  <hr>
			</div>
		<% end -%>
		<!-- </div> -->
	</div>
	<div class="w3-cell m8 w3-padding">
		
	</div>
	</div>
</div>